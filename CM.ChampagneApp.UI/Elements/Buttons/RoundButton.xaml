<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Name="Control" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CM.ChampagneApp.UI.Elements.Buttons.RoundButton">
    <ContentView.Content>
        <AbsoluteLayout Margin="0,0,0,0" BackgroundColor="Transparent" HorizontalOptions="Center">
            <Frame BackgroundColor="#665A4D" Padding="0" HorizontalOptions="Center" HeightRequest="20" CornerRadius="10" HasShadow="false">
                <Grid >
                    <Label Margin="30,0,30,0"  Text="{Binding ButtonText, Source={x:Reference Control}}" TextColor="White" FontAttributes="Bold" FontSize="13" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Button Clicked="Handle_Clicked" Grid.Row="0" Grid.Column="0" BackgroundColor="Transparent"/>
                </Grid>
            </Frame>
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>