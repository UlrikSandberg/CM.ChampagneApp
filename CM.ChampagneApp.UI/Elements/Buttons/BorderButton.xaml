<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Name="Control" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CM.ChampagneApp.UI.Elements.Buttons.BorderButton">
    <ContentView.Content>
        <AbsoluteLayout Margin="0,0,0,0" BackgroundColor="Transparent" HorizontalOptions="Center">
            <Frame Padding="0" HorizontalOptions="Center" HeightRequest="30" CornerRadius="15" HasShadow="false">
                <Grid >
                    <Label Margin="30,0,30,0"  Text="{Binding Text, Source={x:Reference Control}}" TextColor="White" FontAttributes="Bold" FontSize="13" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Button Clicked="Handle_Clicked" BorderWidth="1" BorderColor="{StaticResource Key=DarkGold}" BorderRadius="15"  Grid.Row="0" Grid.Column="0" FontSize="12" BackgroundColor="Transparent"/>
                </Grid>
            </Frame>
        </AbsoluteLayout>
    </ContentView.Content>
</ContentView>
