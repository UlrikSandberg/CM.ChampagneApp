<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns:effects="clr-namespace:CM.ChampagneApp.UI"  xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CM.ChampagneApp.UI.Elements.Headers.H2">
    <ContentView.Content>
        <Grid ColumnSpacing="30" Padding="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="{StaticResource Key=DarkGold}" HeightRequest="1" HorizontalOptions="Fill" VerticalOptions="Center" />
            <Label x:Name="TitleLabel" Grid.Row="0" Grid.Column="2" Text="Technical Identity" TextColor="White" FontFamily="{StaticResource Key=HeaderFont}" FontSize="14" HorizontalOptions="Center" VerticalOptions="Center" />
            <BoxView Grid.Row="0" Grid.Column="3" BackgroundColor="{StaticResource Key=DarkGold}" HeightRequest="1" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
        </Grid>
    </ContentView.Content>
</ContentView>