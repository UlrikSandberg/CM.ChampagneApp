<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Name="Control" xmlns:CircleImage="clr-namespace:CM.ChampagneApp.UI.Elements.Assets" xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms" xmlns:Assets="clr-namespace:CM.ChampagneApp.UI.Elements.Assets" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CM.ChampagneApp.UI.Elements.Lists.ListTemplates.BrandSearchModelTemplate">
    <ContentView.Content>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <StackLayout Spacing="15" Orientation="Horizontal" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <CircleImage:CircleImage Shadow="true" Diameter="20" HeightRequest="40" WidthRequest="40" HorizontalOptions="Center" VerticalOptions="Center" Source="{Binding ImageUrl, Source={x:Reference Control}}" PlaceholderImage="PlaceholderBrandLogoImg.png">
                </CircleImage:CircleImage>
                <Label VerticalOptions="Center" HorizontalOptions="Start" TextColor="White" FontSize="14" FontAttributes="Bold" FontFamily="Avenir" Text="{Binding Name, Source={x:Reference Control}}" />
            </StackLayout>
        </Grid>
    </ContentView.Content>
</ContentView>