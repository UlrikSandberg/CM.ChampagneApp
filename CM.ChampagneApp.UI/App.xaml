<?xml version="1.0" encoding="utf-8"?>
<Application xmlns:res="clr-namespace:CM.ChampagneApp.UI.Resources" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CM.ChampagneApp.App">
    <Application.Resources>
        <!-- Application resource dictionary -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <res:Typography />
                <res:Colors />
                <res:Cards />
                <res:Fonts/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ContentPage" ApplyToDerivedTypes="true">
                <Setter Property="BackgroundColor" Value="{StaticResource Charcoal}" />
            </Style>
            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="False" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>